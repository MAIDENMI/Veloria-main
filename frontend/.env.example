# API Keys Template
# Copy this file to .env.local and fill in your actual keys

# NextAuth Configuration (Required for authentication)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_random_secret_key_here

# Google OAuth Credentials (Required for sign-in)
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ElevenLabs Configuration (Required for voice chat)
NEXT_PUBLIC_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
NEXT_PUBLIC_ELEVENLABS_AGENT_ID=your_elevenlabs_agent_id_here

# Backend Service URLs (using Vercel API routes)
NEXT_PUBLIC_BACKEND_CHAT_URL=/api/chat
NEXT_PUBLIC_BACKEND_VOICE_URL=/api/voice
NEXT_PUBLIC_TALKINGHEAD_URL=https://your-talkinghead-cdn.com

# Server-side API Keys (secure)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Additional API Keys
OPENAI_API_KEY=your_openai_key_here
GOOGLE_API_KEY=your_google_key_here
NEXT_PUBLIC_GOOGLE_TTS_API_KEY=your_google_tts_key_here
